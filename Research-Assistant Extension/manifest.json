{
    "manifest_version": 3,
    "name": "Research Assistant",
    "version": "1.0.0",
    "description": "A powerful AI Research Assistant for your browser. Quickly summarize, paraphrase, translate, explain, or simplify selected text. Perfect for students, researchers, and curious readers.",
    "permissions": ["activeTab", "storage", "sidePanel", "scripting"],
    "action" : {
        "default_title" : "Research Assistant"
    },
    "side_panel" : {
        "default_path" : "sidepanel.html"
    },
    "background" : {
        "service_worker" : "background.js"
    },
    "host_permissions": [
        "http://localhost:8080/*",
        "<all_urls>"
    ],
    "content_security_policy" : {
        "extension_pages" : "script-src 'self'; object-src 'self'"
    }
}